{
	// Terminal configuration.
	"terminal.integrated.profiles.windows": {
		"PowerShell": {
			"source": "PowerShell",
			"icon": "terminal-powershell"
		},
		"Command Prompt": {
			"path": [
				"${env:windir}\\Sysnative\\cmd.exe",
				"${env:windir}\\System32\\cmd.exe"
			],
			"args": [],
			"icon": "terminal-cmd"
		},
		"Git Bash": {
			"source": "Git Bash",
			"icon": "terminal-bash"
		}
	},
	"terminal.integrated.defaultProfile.windows": "Git Bash",
	"terminal.integrated.confirmOnExit": "hasChildProcesses",
	"terminal.integrated.tabs.title": "${cwdFolder}",
	"terminal.integrated.tabs.description": "${workspaceFolder} (${process}) ${separator}${task}",
	"terminal.integrated.tabs.enableAnimation": true,

	// General settings.
	"editor.suggestSelection": "first",
	"extensions.ignoreRecommendations": false,

	// VS Code UI Customizations.
	"editor.fontFamily": "'CaskaydiaCove Nerd Font', 'Source Code Pro SemiBold', Consolas, 'Courier New', monospace",
	"editor.fontLigatures": true,
	"editor.guides.bracketPairs": true,
	"editor.guides.bracketPairsHorizontal": true,
	"editor.minimap.autohide": true,
	"editor.minimap.enabled": true,
	"scm.defaultViewMode": "tree",
	"window.commandCenter": true,
	"window.menuBarVisibility": "compact",
	"workbench.colorTheme": "Andromeda Italic",
	"workbench.productIconTheme": "fluent-icons",
	"workbench.iconTheme": "material-icon-theme",

	// Powershell/CMD Theming.
	"workbench.colorCustomizations": {
		"terminal.background": "#263238",
		"terminal.foreground": "#CDD3DE",
		"terminalCursor.background": "#CDD3DE",
		"terminalCursor.foreground": "#CDD3DE",
		"terminal.ansiBlack": "#263238",
		"terminal.ansiBlue": "#89DDFF",
		"terminal.ansiBrightBlack": "#707880",
		"terminal.ansiBrightBlue": "#89DDFF",
		"terminal.ansiBrightCyan": "#80CBC4",
		"terminal.ansiBrightGreen": "#8BD649",
		"terminal.ansiBrightMagenta": "#82AAFF",
		"terminal.ansiBrightRed": "#EC5F67",
		"terminal.ansiBrightWhite": "#FFFFFF",
		"terminal.ansiBrightYellow": "#FFCC00",
		"terminal.ansiCyan": "#80CBC4",
		"terminal.ansiGreen": "#8BD649",
		"terminal.ansiMagenta": "#82AAFF",
		"terminal.ansiRed": "#EC5F67",
		"terminal.ansiWhite": "#CDD3DE",
		"terminal.ansiYellow": "#FFCC00"
	},
	"terminalAllInOne.terminalTheme": "Materia",

	// Code Formatting config.
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.detectIndentation": true,
	"[html, javascript, xml]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[java]": {
		"editor.defaultFormatter": "mwpb.java-prettier-formatter"
	},
	"[python]": {
		"editor.defaultFormatter": "ms-python.python",
		"editor.formatOnType": true
	},
	"[sql]": {
		"editor.defaultFormatter": "adpyke.vscode-sql-formatter"
	},
	"[shellscript]": {
		"editor.defaultFormatter": "vscode.typescript-language-features"
	},
	"emmet.includeLanguages": {
		"javascript": "javascriptreact"
	},
	"editor.formatOnSave": true,

	// "Code Spell Checker" Settings.
	"cSpell.userWords": [],

	// "GitLens" Settings.
	"gitlens.views.lineHistory.avatars": true,

	// "GlassIt-VSC" Settings.
	"glassit.alpha": 255,
	"glassit.step": 20,

	// "Language Support for Java" Settings.
	"java.compile.nullAnalysis.mode": "automatic",

	// "Prettier" Settings.
	"prettier.tabWidth": 4,
	"prettier.useTabs": true,
	"prettier.jsxSingleQuote": true,
	"prettier.singleQuote": true,

	// "vscode-pets" Settings
	"vscode-pets.theme": "winter",

	// Zen mode
	"zenMode.fullScreen": false,
	"zenMode.showTabs": "single",

	// Blinking cursor animation
	"editor.cursorStyle": "block",
	"editor.cursorBlinking": "expand",

	// Smooth caret animation
	"editor.cursorSmoothCaretAnimation": "explicit",

	// VS Code 1.44.x Settings.
	// For HTML automatic tag renaming.
	"editor.linkedEditing": true,

	// VS Code 1.53.x Settings.
	"workbench.editor.wrapTabs": true,
	"workbench.editor.decorations.colors": true, // For showing color on tabs for warnings/errors in files
	"workbench.editor.decorations.badges": true,
	"files.exclude": {
		"**/.classpath": true,
		"**/.project": true,
		"**/.settings": true,
		"**/.factorypath": true
	}, // For showing the Git status of files on tabs like modified lines.

	// VS Code 1.56.x Settings.
	"javascript.inlayHints.functionLikeReturnTypes.enabled": true,
	"window.dialogStyle": "custom",
	"terminal.integrated.tabs.enabled": true,

	// VS Code 1.67.x Settings.
	// For enabling File nesting.
	"explorer.fileNesting.enabled": true,
	"explorer.fileNesting.expand": true,
	"explorer.fileNesting.patterns": {
		"*.component.ts": "${capture}.component.css, ${capture}.component.html, ${capture}.component.less, ${capture}.component.scss, ${capture}.component.spec.ts",
		"*.module.ts": "${capture}-routing.module.ts",
		"*.ts": "${capture}.js",
		"*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
		"*.jsx": "${capture}.js",
		"*.tsx": "${capture}.ts",
		"tsconfig.json": "tsconfig.*.json",
		"package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml"
	},

	// VS Code 1.69.x Settings.
	"git.mergeEditor": false,
	"editor.minimap.size": "fill",
	"editor.stickyScroll.enabled": true,
	"typescript.updateImportsOnFileMove.enabled": "always",

	// VS Code 1.71.x Settings.
	"terminal.integrated.smoothScrolling": false,

	// VS Code 1.79.x Settings.
	"files.readonlyInclude": {
		"node_modules/**": true
	},
	"diffEditor.ignoreTrimWhitespace": false,

	// VS Code 1.83.x Settings.
	"workbench.editor.pinnedTabsOnSeparateRow": true,

	// VS Code 1.85.x Settings.
	"terminal.integrated.stickyScroll.enabled": true,
	"terminal.integrated.stickyScroll.maxLineCount": 5,
	"workbench.tree.enableStickyScroll": true,
	"workbench.tree.stickyScrollMaxItemCount": 7,

	// VS Code 1.91.x Settings.
	"editor.codeActionsOnSave": {
		"source.organizeImports": "explicit"
	}
}
