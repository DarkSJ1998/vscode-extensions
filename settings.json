{
	"terminal.integrated.profiles.windows": {
		"PowerShell": {
			"source": "PowerShell",
			"icon": "terminal-powershell"
		},
		"Command Prompt": {
			"path": [
				"${env:windir}\\Sysnative\\cmd.exe",
				"${env:windir}\\System32\\cmd.exe"
			],
			"args": [],
			"icon": "terminal-cmd"
		},
		"Git Bash": {
			"source": "Git Bash"
		}
	},
	"terminal.integrated.defaultProfile.windows": "PowerShell",

	"window.zoomLevel": 0,
	"java.semanticHighlighting.enabled": true,
	"editor.suggestSelection": "first",
	"vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
	"editor.detectIndentation": true,
	"extensions.ignoreRecommendations": false,

	// Prettier stuff
	"prettier.tabWidth": 4,
	"prettier.useTabs": true,
	"prettier.jsxSingleQuote": true,
	"prettier.singleQuote": true,

	// Code Formatting config
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"[python]": {
		"editor.defaultFormatter": "ms-python.python"
	},
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[java]": {
		"editor.defaultFormatter": "mwpb.java-prettier-formatter"
	},
	"emmet.includeLanguages": {
		"javascript": "javascriptreact"
	},
	"editor.formatOnSave": true,
	"diffEditor.ignoreTrimWhitespace": false,

	// Powershell/CMD Theming
	"workbench.colorCustomizations": {
		"terminal.background": "#2C3E50",
		"terminal.foreground": "#E0E0E0",
		"terminalCursor.background": "#E0E0E0",
		"terminalCursor.foreground": "#E0E0E0",
		"terminal.ansiBlack": "#2C3E50",
		"terminal.ansiBlue": "#3498DB",
		"terminal.ansiBrightBlack": "#95A5A6",
		"terminal.ansiBrightBlue": "#3498DB",
		"terminal.ansiBrightCyan": "#1ABC9C",
		"terminal.ansiBrightGreen": "#2ECC71",
		"terminal.ansiBrightMagenta": "#9B59B6",
		"terminal.ansiBrightRed": "#E74C3C",
		"terminal.ansiBrightWhite": "#ECF0F1",
		"terminal.ansiBrightYellow": "#F1C40F",
		"terminal.ansiCyan": "#1ABC9C",
		"terminal.ansiGreen": "#2ECC71",
		"terminal.ansiMagenta": "#9B59B6",
		"terminal.ansiRed": "#E74C3C",
		"terminal.ansiWhite": "#E0E0E0",
		"terminal.ansiYellow": "#F1C40F"
	},
	"terminalAllInOne.terminalTheme": "Flat",

	// VS Code 1.53.x Settings
	"workbench.editor.wrapTabs": true,
	"workbench.editor.decorations.colors": true, // For showing color on tabs for warnings/errors in files
	"workbench.editor.decorations.badges": true,
	"files.exclude": {
		"**/.classpath": true,
		"**/.project": true,
		"**/.settings": true,
		"**/.factorypath": true
	}, // For showing the Git status of files on tabs like modified lines

	// VS Code 1.56.x Settings
	"window.dialogStyle": "custom",
	"terminal.integrated.tabs.enabled": true,

	// VS Code UI Customizations
	"workbench.colorTheme": "Default Dark+",
	"workbench.productIconTheme": "fluent-icons",
	"workbench.iconTheme": "material-icon-theme"
}
